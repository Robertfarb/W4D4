<!DOCTYPE html>
<html>
  <head>
    <title>Music</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <h1>Music App!</h1>
    </div>
    <% if self.controller.logged_in? %>
    <%= button_to "Logout", session_url, method: "delete", class: 'logout btn'%>
    <% end %>
    <%= yield %>
  </body>
</html>
